@model IEnumerable<Bid>
<nav class="navbar navbar-light bg-light">
    <form class="container-fluid justify-content-start">
        <a class="btn btn-outline-success me-2" type="button" asp-controller="Home" asp-action="AddBid">Add new bid</a>
        <a class="btn btn-sm btn-outline-secondary" type="button"  asp-action="DeleteBid" asp-route-bidId="@( (int)ViewData["SelectBidId"])">Delete select bid</a>
    </form>
</nav>
<div class="list-group">
    @foreach (var bid in Model)
    {
        <a class="list-group-item list-group-item-action @(bid.Id == (int)ViewData["SelectBidId"] ? "active" : "")" asp-controller="Home" asp-action="DetailInfo" asp-route-id="@bid.Id">@bid.Id</a>
    }
</div>